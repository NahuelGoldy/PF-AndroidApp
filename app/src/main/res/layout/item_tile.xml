<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/nombreEsta_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estacionamiento" />

    <TextView
        android:text="La reserva se vence a las:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left_to_cancel"
        android:layout_below="@+id/nombreEsta_text"
        android:layout_alignParentStart="true" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/left_to_cancel"
        android:layout_toEndOf="@+id/left_to_cancel"
        android:layout_marginStart="48dp"
        android:id="@+id/clock_vencimiento" />

</RelativeLayout>